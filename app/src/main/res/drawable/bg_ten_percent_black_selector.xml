<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ten_percent_black" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@color/item_focused">
        <shape android:shape="rectangle">
            <solid android:color="@color/ten_percent_black" />
        </shape>
    </item>
    <item android:state_checked="true" android:drawable="@color/item_focused">
        <shape android:shape="rectangle">
            <solid android:color="@color/ten_percent_black" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>