            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/flatui_clouds"
            android:textSize="16dp"
            android:text="@string/lorem_ipsum"
            android:padding="@dimen/margin_medium_large">
